<resources>

    <!-- Base application theme. -->
    <style name="Flea.Theme.Default" parent="Theme.Sherlock.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowContentOverlay">@null</item>
        <!--<item name="contentBackground">@color/bg_list_content</item>-->
        <item name="android:windowBackground">@color/bg_list_content</item>

        <item name="homeAsUpIndicator">@drawable/ic_explore_back_drawable</item>
        <item name="actionBarStyle">@style/Flea.ActionBar.Default</item>
        <item name="actionButtonStyle">@style/Flea.ActionBar.ActionButton</item>
        <item name="actionBarItemBackground">@drawable/bg_explore_actionbar_item</item>
        <item name="actionOverflowButtonStyle">@style/Flea.ActionBar.ActionButton.Overflow</item>
        <item name="listPopupWindowStyle">@style/Flea.Widget.Popup</item>
        <item name="popupMenuStyle">@style/Flea.Widget.Popup</item>
        <item name="dropDownListViewStyle">@style/Flea.Widget.ListView.DropDown</item>
        <item name="android:dropDownListViewStyle">@style/Flea.Widget.ListView.DropDown</item>

        <!--<item name="verticalId">@id/vertical_home</item>-->
        <!--<item name="verticalColor">@color/light_red</item>-->
        <!--<item name="verticalNormalColor">@color/light_red</item>-->
        <!--<item name="verticalButtonBackground">@drawable/bg_card_button_drawable_selector_home</item>-->
        <!--<item name="verticalProgressDrawable">@drawable/bg_progress_bar_home</item>-->
        <!--<item name="verticalTabTextColor">@color/color_tab_home</item>-->
        <!--<item name="verticalFilterDrawable">@drawable/bg_filter_item_home</item>-->
    </style>

    <style name="Flea.ActionBar.Default"
           parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="navigationMode">normal</item>
        <item name="background">@color/bg_explore_banner</item>
        <item name="titleTextStyle">@style/TextAppearance.Flea.ActionBar.Title</item>
        <item name="displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="Flea.ActionBar.ActionButton"
           parent="Widget.Sherlock.Light.ActionButton">
        <item name="android:minWidth">@dimen/actionbar_height</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Flea.ActionBar.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_mything_overflow_normal</item>
        <item name="android:minWidth">@dimen/actionbar_height</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Flea.Widget.Popup"
           parent="Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_explore_menu</item>
        <item name="android:dropDownWidth">@dimen/dropdown_item_width</item>
    </style>

    <style name="Flea.Widget.ListView.DropDown"
           parent="Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:divider">@color/dropdown_menu_list_divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/dropdown_menu_list_item_bg</item>
    </style>

    <style name="TextAppearance.Flea.ActionBar.Title"
           parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="card_list_view">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="tips_button">
        <item name="android:listSelector">?attr/verticalButtonBackground</item>
        <item name="android:layout_width">120dip</item>
        <item name="android:layout_height">36dip</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/verticalButtonBackground</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="floating_tips_text">
        <item name="android:textSize">@dimen/card_subtitle_size</item>
        <item name="android:textColor">@color/floating_tips_text_color</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="floating_tips_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/floating_tips_height</item>
    </style>

    <style name="card_sub_title">
        <item name="android:textColor">@color/card_sub_title_color</item>
        <item name="android:textSize">@dimen/card_subtitle_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="card_download_speed">
        <item name="android:textColor">?attr/verticalNormalColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/card_tag_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="card_title_mini">
        <item name="android:textColor">@color/card_title_color</item>
        <item name="android:textSize">@dimen/card_title_mini_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="card_item">
        <item name="android:background">@drawable/bg_card_background_normal</item>
    </style>

    <style name="card_action_imageview">
        <!--<item name="android:background">?attr/verticalButtonBackground</item>-->
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">@dimen/card_button_imageview_width</item>
        <item name="android:layout_height">@dimen/card_button_imageview_height</item>
        <item name="android:textSize">@dimen/card_button_text_size</item>
        <item name="android:textColor">@color/card_button_color_selector</item>
    </style>

    <style name="card_title">
        <item name="android:textColor">@color/card_title_color</item>
        <item name="android:textSize">@dimen/card_title_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
    </style>

    <style name="card_download_progress">
        <item name="android:progressDrawable">?attr/verticalProgressDrawable</item>
        <item name="android:layout_height">3dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:max">100</item>
    </style>

    <style name="card_cover_short_video">
        <item name="android:layout_width">@dimen/video_card_icon_width</item>
        <item name="android:layout_height">@dimen/card_icon_short_video_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_title_short_video">
        <item name="android:textColor">@color/card_title_color</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="card_action_button">
        <item name="android:background">?attr/verticalButtonBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/card_button_width</item>
        <item name="android:layout_height">@dimen/card_button_height</item>
    </style>

    <style name="card_banner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">140dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_sub_action">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/card_sub_action_width</item>
        <item name="android:layout_height">@dimen/card_sub_action_height</item>
    </style>

    <style name="card_icon_mini">
        <item name="android:layout_width">@dimen/card_icon_mini_width</item>
        <item name="android:layout_height">@dimen/card_icon_mini_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_cover_mini">
        <item name="android:layout_width">@dimen/card_cover_mini_width</item>
        <item name="android:layout_height">@dimen/card_cover_mini_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
